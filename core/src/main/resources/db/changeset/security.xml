<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">
        <changeSet id="4" author="Konstantin">
            <comment>add security tables</comment>
            <createTable tableName="users" remarks="Пользователи">
                <column name="id" type="bigint" autoIncrement="true">
                    <constraints nullable="false" primaryKey="true" unique="true"/>
                </column>
                <column name="username" type="varchar(200)">
                    <constraints nullable="false" unique="true"/>
                </column>
                <column name="password" type="varchar(200)">
                    <constraints nullable="false" unique="true"/>
                </column>
            </createTable>

            <createTable tableName="roles" remarks="Роли">
                <column name="id" type="bigint" autoIncrement="true">
                    <constraints nullable="false" primaryKey="true" unique="true"/>
                </column>
                <column name="name" type="varchar(200)">
                    <constraints nullable="false" unique="true"/>
                </column>
            </createTable>

            <createTable tableName="user_role" remarks="Таблица для отображения пользователя и роли">
                <column name="user_id" type="bigint">
                    <constraints nullable="false"/>
                </column>
                <column name="role_id" type="bigint">
                    <constraints nullable="false"/>
                </column>
            </createTable>
        </changeSet>
</databaseChangeLog>